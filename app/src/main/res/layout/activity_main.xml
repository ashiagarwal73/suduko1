<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ashi.suduko1.MainActivity">
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="130dp"
        android:orientation="horizontal">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment1">
    </FrameLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment2">
    </FrameLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment3">
    </FrameLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="130dp"
        android:orientation="horizontal"
        >
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment4">
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment5">
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment6">
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="130dp"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment7">
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment8">
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment9">
        </FrameLayout>
    </LinearLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/numbers"
        android:visibility="invisible"
        android:layout_marginTop="55dp"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="#000"
            android:background="#d6d7d7"
            android:textSize="20sp"
            android:id="@+id/n1"/>
        <RadioButton
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="2"
            android:button="@null"
            android:gravity="center"
            android:textColor="#000"
            android:background="#d6d7d7"
            android:textSize="20sp"
            android:id="@+id/n2"/>
        <RadioButton
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="3"
            android:button="@null"
            android:gravity="center"
            android:textColor="#000"
            android:background="#d6d7d7"
            android:textSize="20sp"
            android:id="@+id/n3"/>
        <RadioButton
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="4"
            android:button="@null"
            android:gravity="center"
            android:textColor="#000"
            android:background="#d6d7d7"
            android:textSize="20sp"
            android:id="@+id/n4"/>
        <RadioButton
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="5"
            android:button="@null"
            android:gravity="center"
            android:textColor="#000"
            android:background="#d6d7d7"
            android:textSize="20sp"
            android:id="@+id/n5"/>
        <RadioButton
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="6"
            android:button="@null"
            android:gravity="center"
            android:textColor="#000"
            android:background="#d6d7d7"
            android:textSize="20sp"
            android:id="@+id/n6"/>
        <RadioButton
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="7"
            android:button="@null"
            android:gravity="center"
            android:textColor="#000"
            android:background="#d6d7d7"
            android:textSize="20sp"
            android:id="@+id/n7"/>
        <RadioButton
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="8"
            android:button="@null"
            android:gravity="center"
            android:textColor="#000"
            android:background="#d6d7d7"
            android:textSize="20sp"
            android:id="@+id/n8"/>
        <RadioButton
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:text="9"
            android:button="@null"
            android:gravity="center"
            android:textColor="#000"
            android:background="#d6d7d7"
            android:textSize="20sp"
            android:id="@+id/n9"/>
    </RadioGroup>
</LinearLayout>